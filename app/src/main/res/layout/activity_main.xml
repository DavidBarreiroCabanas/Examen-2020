<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="412dp"
        android:layout_height="67dp"
        android:layout_marginBottom="664dp"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/act_main_btn_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/ic_icons8_menu_208" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="150"
            android:src="@drawable/ic_user" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="410dp"
        android:layout_height="663dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView2"
            style="@style/Titulo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            android:text="@string/act_main_titulo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_life_team"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:background="@color/color3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_rocking_chair_80" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_life" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_casa"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_casa" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_home" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_car_100" />

                <TextView
                    android:id="@+id/textView5"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_vehiculo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_family"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_family_100" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_family" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_investiment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_donate_64" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_investiment" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_health"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_heart_health_100" />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_health" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_travel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_casa" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_retirement" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_retirement"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_weight="80"
                    android:backgroundTint="@color/color1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_rocking_chair_80" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/act_main_travel" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="15dp"
            android:layout_weight="35"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_track"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="80"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_eye_128" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/track_you_claim" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="50"
                android:orientation="vertical"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/act_main_btn_claim"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="80"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_money_bag_100" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/TextoBoton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="@string/claim_process" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="55dp"
            android:layout_marginTop="30dp"
            android:layout_weight="30"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nueva_actu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_icons8_grandfather_100" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="65"
                    android:text="@string/txt1_update" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>